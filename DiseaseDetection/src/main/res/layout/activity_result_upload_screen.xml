<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".AnalysisResult.ResultUploadScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/result_upload_screen_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_background"
        android:inputType="textPersonName|textNoSuggestions"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="Shyam Lal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/age"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/result_upload_screen_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_background"
        android:inputType="number"
        android:maxLength="3"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="12" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/gender"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/result_upload_screen_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="10dp" />


    <TextView
        android:id="@+id/result_upload_screen_save_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_data"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@drawable/edittext_background"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_gravity="center"/>

</LinearLayout>